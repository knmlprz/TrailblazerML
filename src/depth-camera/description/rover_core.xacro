<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" > 

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

     <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

     <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

     <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!-- BASE LINK -->
    <link name="base_link">

    </link>

    <!-- Polaczenie pudelka z base link -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 0.2"/>
    </joint>    

    <!-- Nadwozie -->
    <link name="chassis">
        <visual>
            <origin xyz="0 0 0.2"/>
            <geometry>
                <box size="1.5 0.8 0.4"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.2"/>
            <geometry>
                <box size="1.5 0.8 0.4"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="5" x="1.5" y="0.8" z="0.4">
            <origin xyz="0 0 0.2"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/White</material>
    </gazebo>

    <!-- Połączenie prawe tylne koło -->
    <joint name="rear_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_right_wheel"/>
        <origin xyz="-0.55 -0.5 0.2" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>    

    <!-- Rear_right_wheel -->
    <link name="rear_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.2" length="0.2"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.2" length="0.2"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="1" length="0.2" radius="0.2">
            <origin xyz="0 0 0.2" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="rear_right_wheel">
        <material>Gazebo/Blue</material>
        <mu1 value="0.5"/>
        <mu2 value="0.5"/>
    </gazebo>

    <!-- Połączenie lewe tylne koło -->
    <joint name="rear_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_left_wheel"/>
        <origin xyz="-0.55 0.5 0.2" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>    

    <!-- Rear_left_wheel -->
    <link name="rear_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.2" length="0.2"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.2" length="0.2"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="1" length="0.2" radius="0.2">
            <origin xyz="0 0 0.2" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="rear_left_wheel">
        <material>Gazebo/Blue</material>
        <mu1 value="0.5"/>
        <mu2 value="0.5"/>
    </gazebo>

    <!-- Połączenie prawe przednie koło -->
    <joint name="front_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front_right_wheel"/>
        <origin xyz="0.55 -0.5 0.2" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>    

    <!-- Front_right_wheel -->
    <link name="front_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.2" length="0.2"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.2" length="0.2"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="1" length="0.2" radius="0.2">
            <origin xyz="0 0 0.2" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="front_right_wheel">
        <material>Gazebo/Blue</material>
        <mu1 value="0.5"/>
        <mu2 value="0.5"/>
    </gazebo>

    <!-- Połączenie lewe tylne koło -->
    <joint name="front_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front_left_wheel"/>
        <origin xyz="0.55 0.5 0.2" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>    

    <!-- Front_left_wheel -->
    <link name="front_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.2" length="0.2"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.2" length="0.2"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="1" length="0.2" radius="0.2">
            <origin xyz="0 0 0.2" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="front_left_wheel">
        <material>Gazebo/Blue</material>
        <mu1 value="0.5"/>
        <mu2 value="0.5"/>
    </gazebo>



    
</robot>
